<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:id="@+id/DetailPemeriksaanOnCall"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:paddingBottom="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal" android:id="@+id/linearLayout">

            <ImageButton
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_place_white_24dp"
                    android:background="@drawable/tbrekap"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2">
                    <TextView
                            android:id="@+id/tx_nama_oncall"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Bima Agung Setya Budi"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="3dp"
                            android:textStyle="bold"
                            android:textSize="16sp"

                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                </LinearLayout>

                <ImageButton
                        android:id="@+id/delete_oncall"
                        android:background="@drawable/ic_clear_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="57dp"
                        android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>


                <TextView
                        android:id="@+id/tx_tgl_oncall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="09:10:10 / 12-13-2019"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_id_oncall"
                        app:layout_constraintStart_toStartOf="parent"
                />

                <TextView
                        android:id="@+id/label_id_oncall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID :"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
                <TextView
                        android:id="@+id/tx_id_oncall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                        app:layout_constraintStart_toEndOf="@+id/label_id_oncall" android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>