<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
                android:padding="10dp"
              android:layout_height="wrap_content">

        <CheckBox
                android:id="@+id/tx_item_pemeriksaan"
                android:checked="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:buttonTint="#58C171"
                android:text="HB" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/input_hasil_pemeriksaan" android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"/>

        <EditText android:layout_width="90dp"
                  android:padding="3dp"
                  android:id="@+id/input_hasil_pemeriksaan"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:inputType="text"
                  android:background="@drawable/input_hasil"
                  android:layout_toEndOf="@+id/tx_item_pemeriksaan"
                  android:layout_toRightOf="@+id/tx_item_pemeriksaan"
                  android:layout_toStartOf="@+id/tb_lab_open"
                  android:layout_toLeftOf="@+id/tb_lab_open"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/tb_simpan_hasil"
                  android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
        />

        <Button android:layout_width="50dp"
                android:id="@+id/tb_simpan_hasil"
                android:visibility="visible"
                android:padding="6dp"
                android:layout_height="30dp"
                android:text="Key"
                android:textSize="10sp"
                android:textColor="#FFFF"
                android:layout_gravity="right"
                android:background="@drawable/tbsimpanprofil" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/input_hasil_pemeriksaan"
                android:layout_toRightOf="@+id/input_hasil_pemeriksaan"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

        <Button android:layout_width="50dp"
                android:id="@+id/tb_open_hasil"
                android:visibility="visible"
                android:padding="6dp"
                android:layout_height="30dp"
                android:text="Open"
                android:textSize="10sp"
                android:textColor="#FFFF"
                android:layout_gravity="right"
                android:background="@drawable/tblogout" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/input_hasil_pemeriksaan"
                android:layout_toRightOf="@+id/input_hasil_pemeriksaan"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
        />
                <!--android:layout_marginStart="9dp"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>