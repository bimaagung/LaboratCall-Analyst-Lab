<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="328dp"
            app:cardElevation="0dp"
            android:id="@+id/detailHasil"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:paddingBottom="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal" android:id="@+id/linearLayout">

            <ImageButton
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_person_white_40dp"
                    android:background="@drawable/tbrekap"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2">
                    <TextView
                            android:id="@+id/tx_nama_pencarian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bima Agung Setya Budi"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="3dp"
                            android:textSize="14sp"

                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:id="@+id/tx_umur_pencarian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(22th)"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="3dp"
                            android:textSize="10sp"/>
                </LinearLayout>




                <TextView
                        android:id="@+id/label_id_oncall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID :"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
                <TextView
                        android:id="@+id/tx_id_pencarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                        app:layout_constraintStart_toEndOf="@+id/label_id_oncall" android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>