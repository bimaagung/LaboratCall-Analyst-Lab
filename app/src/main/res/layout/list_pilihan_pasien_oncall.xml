<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
               >

    <ImageView android:layout_width="30dp"
               android:id="@+id/icon"
               android:layout_height="30dp"
               android:src="@drawable/ic_assignment_turned_in_gree_24dp" android:layout_alignParentStart="true"
               android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
               android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HB"
            android:id="@+id/tx_item"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/icon" android:layout_toRightOf="@+id/icon" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_alignTop="@+id/icon" android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp" android:layout_alignBottom="@+id/icon"/>

</RelativeLayout>